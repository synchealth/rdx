{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "src",
    "lib": ["esnext"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "noImplicitAny": false,
    "noImplicitUseStrict": false,
    "removeComments": true,
    "noLib": false,
    "noEmitHelpers": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": ["@types/node", "@types/unist"]
  },
  "include": ["src"],
  "exclude": ["dist"]
}
